{
  "compilerOptions": {
    "rootDir": "./packages",
    "baseUrl": "./",
    "module": "esnext",
    "sourceMap": true,
    "allowJs": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "declaration": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "importHelpers": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "strictNullChecks": false,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "exclude": [
    "packages/firstSample/dist",
    "packages/secondSample/dist",
    "packages/sprkl/dist",
    "packages/sprkl/node_modules"
  ],
  "include": [
    "./packages/firstSample/src",
    "./packages/secondSample/src",
    "./index.d.ts",
    "./packages/sprkl/src"
  ]
}

